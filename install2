#!/bin/bash
rvm install ruby && sudo pip3 install neovim && sudo apt-get install python3-neovim && sudo chsh -s /usr/bin/fish && cd ~/.config && mkdir nvim && cd nvim && ln -s ~/VimSetup/init.vim init.vim && cd ~/.local/share/nvim/site/ && curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim && cd ~/.config/fish && rm config.fish && ln -s ~/VimSetup/config.fish && cd ~/ && ln -s ~/VimSetup/init.vim .vimrc && ln -s ~/.local/share/nvim .vim && vi ~/.vimrc
